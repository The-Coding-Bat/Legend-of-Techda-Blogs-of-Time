<div class="posts">
  {{#each posts}}
  <article class="card">
    <div class="post-header flex-row justify-space-between">
      <h2>
        <a href="/post/{{id}}">{{title}}</a>
      </h2>
      <div>
        Posted by {{user.username}} on {{format_date createdAt}}
      </div>
    </div>
    <div class="post-body">
      {{body}}
    </div>
  </article>
  {{/each}}
</div>